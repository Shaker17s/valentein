    <script>
        /* --- Logic 1: Background Hearts Generator (CSS based) --- */
        const bg = document.getElementById("bgHearts");
        setInterval(() => {
            const h = document.createElement("div");
            h.classList.add("heart-bg");
            h.style.left = Math.random() * 100 + "vw";
            h.style.animationDuration = (Math.random() * 5 + 6) + "s"; // 6-11s
            h.style.width = h.style.height = (Math.random() * 20 + 15) + "px"; // Random size
            bg.appendChild(h);
            setTimeout(() => h.remove(), 11000); // Cleanup
        }, 500);

        /* --- Logic 2: Countdown & Intro --- */
        const countLayer = document.getElementById('countdown-layer');
        const countText = document.getElementById('count-text');
        const mainCard = document.getElementById('mainCard');
        let count = 3;

        const timer = setInterval(() => {
            count--;
            if (count > 0) {
                countText.innerText = count;
                // Retrigger animation
                countText.style.animation = 'none';
                countText.offsetHeight; /* trigger reflow */
                countText.style.animation = 'popIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            } else {
                clearInterval(timer);
                countLayer.style.transition = 'opacity 0.5s';
                countLayer.style.opacity = '0';
                setTimeout(() => countLayer.remove(), 500);
                mainCard.classList.remove('hidden');
            }
        }, 1000);

        /* --- Logic 3: The Runaway Button & Growing YES --- */
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        let yesScale = 1;

        // Reset positions initially to be relative to the card properly
        // We use JS to set initial styles so we can manipulate them easily later
        // Center-ish logic logic applied in CSS via bottom/left/transform

        const moveNoButton = (mouseX, mouseY) => {
            const cardRect = mainCard.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();

            // Mouse relative to Card
            const mouseXRel = mouseX - cardRect.left;
            const mouseYRel = mouseY - cardRect.top;

            // Button Center relative to Card
            // Since we use transform on the button, offsetLeft might be static.
            // Let's rely on getBoundingClientRect relative to cardRect.
            const btnXRel = btnRect.left - cardRect.left + btnRect.width / 2;
            const btnYRel = btnRect.top - cardRect.top + btnRect.height / 2;

            const dist = Math.sqrt(Math.pow(mouseXRel - btnXRel, 2) + Math.pow(mouseYRel - btnYRel, 2));

            // If mouse is within 150px
            if (dist < 150) {
                // 1. Teleport Logic (Snippet Style) - Random position inside card
                // Safe padding
                const padding = 20;
                const maxX = cardRect.width - btnRect.width - padding;
                const maxY = cardRect.height - btnRect.height - padding;

                const randomX = Math.random() * (maxX - padding) + padding;
                const randomY = Math.random() * (maxY - padding) + padding;

                // Apply new position
                // We must override the CSS transform used for centering
                noBtn.style.transform = "none"; 
                noBtn.style.left = `${randomX}px`;
                noBtn.style.top = `${randomY}px`;
                noBtn.style.bottom = "auto";

                // 2. Grow YES Button Logic
                yesScale += 0.15; // Grow by 15% each time
                yesBtn.style.transform = `translateX(-160%) scale(${yesScale})`;

                // 3. Change Text
                const texts = ["No!", "Try again!", "Too slow!", "Impossible!", "Click Yes!"];
                noBtn.innerText = texts[Math.floor(Math.random() * texts.length)];
                noBtn.style.backgroundColor = "#ffe4e6";
            }
        };

        // Desktop
        mainCard.addEventListener('mousemove', (e) => {
            moveNoButton(e.clientX, e.clientY);
        });

        // Mobile
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            // Simulate mouse at button center to trigger move
            const rect = noBtn.getBoundingClientRect();
            moveNoButton(rect.left + rect.width/2, rect.top + rect.height/2);
        });
        
        // Fail-safe Click
        noBtn.addEventListener('click', (e) => {
            e.preventDefault();
            alert("Oops! You missed. Try the other button üòâ");
        });

        /* --- Logic 4: Celebration --- */
        const celebration = document.getElementById('celebration');
        const canvas = document.getElementById('confetti');
        const ctx = canvas.getContext('2d');

        yesBtn.addEventListener('click', () => {
            mainCard.classList.add('hidden');
            celebration.classList.remove('hidden');
            startConfetti();
        });

        function startConfetti() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            let particles = [];
            const colors = ['#ff416c', '#ff4b2b', '#ffffff', '#e11d48', '#FFD700'];

            for (let i = 0; i < 200; i++) {
                particles.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height - canvas.height,
                    size: Math.random() * 8 + 4,
                    speed: Math.random() * 5 + 3,
                    color: colors[Math.floor(Math.random() * colors.length)],
                    oscillation: Math.random() * 20, // Side to side movement
                    step: 0
                });
            }

            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                particles.forEach(p => {
                    ctx.fillStyle = p.color;
                    // Add oscillation for falling leaf effect
                    p.step += 0.05;
                    const xOff = Math.cos(p.step) * 2;
                    
                    ctx.fillRect(p.x + xOff, p.y, p.size, p.size);
                    p.y += p.speed;
                    
                    if (p.y > canvas.height) {
                        p.y = -10;
                        p.x = Math.random() * canvas.width;
                    }
                });
                requestAnimationFrame(animate);
            }
            animate();
        }

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

    </script>
</body>
