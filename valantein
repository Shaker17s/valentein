    <!-- 2. Countdown Layer -->
    <div id="countdown-layer">
        <div id="count-text" class="count-num">3</div>
    </div>

    <!-- 3. Main Card -->
    <div class="glass-card hidden" id="mainCard">
        <div class="bear-container pointer-events-none">
            <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExM2QzYnZ5eW82bWJ5ZGV4OXV3Ynd4bm45bmF4bXc2Z254Z254Z254ZyZlcD12MV9zdGlja2Vyc19zZWFyY2gmY3Q9cw/iCVzZwwE6QNAV2tEE0/giphy.gif" alt="Bear">
        </div>

        <h1 class="title-font text-4xl md:text-5xl mb-2 text-center pointer-events-none">Will you be my</h1>
        <h1 class="title-font text-5xl md:text-6xl mb-6 text-center pointer-events-none">Valentine? üåπ</h1>
        <p class="text-gray-600 mb-8 font-medium italic text-center pointer-events-none">"Every moment with you is magic..."</p>

        <!-- Buttons are absolute positioned inside the card -->
        <button id="yesBtn" class="btn btn-yes">YES üòç</button>
        <button id="noBtn" class="btn btn-no">No üò¢</button>
    </div>

    <!-- 4. Celebration Layer -->
    <div id="celebration" class="hidden fixed inset-0 flex flex-col items-center justify-center z-50 p-4 bg-white/80 backdrop-blur-md">
        <div class="glass-card !min-height-0 !h-auto flex flex-col items-center justify-center p-8 bg-white" style="transform: scale(1);">
            <img src="https://media.giphy.com/media/26FLdmIp6wJr91JAI/giphy.gif" class="h-40 mb-4">
            <h1 class="title-font text-5xl text-pink-600 mb-2">YAAAY! ‚ù§Ô∏è</h1>
            <p class="text-lg text-gray-700 font-semibold mb-4">I knew you'd say yes!</p>
            <div class="bg-pink-50 p-6 rounded-2xl text-center italic text-gray-800 border border-pink-100 shadow-inner">
                "Roses are red, violets are blue,<br>
                My heart beats only for you.<br>
                I'm the luckiest person, it's true,<br>
                To have a Valentine as cute as you! ‚ù§Ô∏è"
            </div>
